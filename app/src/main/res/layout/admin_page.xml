<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onGenerateTimetablesClick"
    android:background="#ffccdcff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to the admin area"
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Modify Classes"
        android:id="@+id/Bmodify_classes"
        android:onClick="onModifyClassesClick" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Assign Teachers"
        android:id="@+id/Bassign_teachers"
        android:layout_gravity="center_horizontal"
        android:onClick="onAssignTeacherClick" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Generate Timetables"
        android:id="@+id/Bgenerate_timetable"
        android:layout_gravity="center_horizontal"
        android:onClick="onGenerateTimtableClick" />
</LinearLayout>